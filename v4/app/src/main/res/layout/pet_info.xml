<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="337dp"
    android:layout_height="500dp"
    android:gravity="center"
    android:layout_marginTop="110dp"
    android:layout_marginLeft="37dp"
    android:layout_marginRight="37dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"> <!-- 使所有元素垂直居中對齊 -->

            <TextView
                android:id="@+id/textView2"
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:gravity="start"
                android:text="我的名字：" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="12dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:hint="點擊輸入"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" /> <!-- 讓文字靠左對齊 -->

            <androidx.cardview.widget.CardView
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp">

                <FrameLayout
                    android:id="@+id/imageFrame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#E0E0E0"
                    android:clickable="true"
                    android:focusable="true">

                    <!-- 顯示Hint的文字 -->
                    <TextView
                        android:id="@+id/hintText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="上傳圖片"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:layout_marginTop="65dp"
                        android:textSize="15sp" />

                    <!-- 顯示上傳的圖片 -->
                    <ImageView
                        android:id="@+id/uploadedImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" /> <!-- 默認隱藏 -->
                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:text="性別 :" />

            <RadioGroup
                android:layout_width="189dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:clickable="true"
                    android:text="公" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:text="母" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ADADAD"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="36dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:text="年齡 ( 歲 ) :" />

            <EditText
                android:id="@+id/yearEditText"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:hint="點擊輸入"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@android:color/transparent"/> <!-- 讓文字靠左對齊 -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ADADAD"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="38dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/star" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="36dp"
                android:layout_height="23dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:alpha="0.7"
                android:text="描述 :" />

            <EditText
                android:id="@+id/describeEditText"
                android:layout_width="170dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:hint="點擊輸入"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:background="@android:color/transparent"/> <!-- 讓文字靠左對齊 -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/health" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="健康紀錄"
                    android:textColor="#66B3FF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/behaver" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="行為訓練"
                    android:textColor="#66B3FF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/remind" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="提醒功能"
                    android:textColor="#66B3FF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="刪除"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="178dp"
                android:layout_marginTop="10dp"
                android:text="儲存"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
